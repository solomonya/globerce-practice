include ../search-bar/mixin
include ../location-btn/mixin

mixin logo-icon(props)
  span.logo__icon

mixin header-logo()
  .header__logo.js-stickyHeaderSectionLogo
    +logo-icon()
    +locationBtn({city: 'Алматы', id: 'lc-btn-1'})

mixin append
  +locationBtn({city: 'Алматы', id: 'lc-btn-2'}).d-none.js-location-btn

mixin header-logo-with-search()
  header.header.js-stickyHeader&attributes(attributes)
    +header-logo()
    +search({append: "append",
             inputClass: "js-search__input search__input",
             clearBtnClass: "search__clear",
             cancelBtnClass: "search__cancel"}).js-search.js-open-search-modal-handler