mixin navigation-link(props)
  a(href="#").navigation-link
    img(src=props.icon, alt=props.alt)
    span.navigation-link__text #{props.text}

mixin navigation(props)
  nav.navigation
    ul.navigation-list
      each link in props.links
        if link.active
          li.navigation-list__item.navigation-list__item_active
            +navigation-link(link)
        else
          li.navigation-list__item
            +navigation-link(link)
            block
